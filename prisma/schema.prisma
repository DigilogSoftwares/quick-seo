// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

// Note that some adapters may set a maximum length for the String type by default, please ensure your strings are long
// enough when changing adapters.
// See https://www.prisma.io/docs/orm/reference/prisma-schema-reference#string for more information
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Auth {
  // primary
  id                 String       @id @default(uuid()) @db.Uuid

  // shop/display details
  shop               String      // e.g. myshop.example.com

  // provider-specific configuration
  googleConfig       Json       // store Google developer project JSON (maps to Postgres jsonb)
  bingIndexingUrl    String      // URL used for Bing Indexing API

  // flexible fields
  settings           Json        // per-integration settings (retry, rate-limits, etc.)

  createdAt          DateTime     @default(now())
  updatedAt          DateTime     @updatedAt

  @@index([shop])
}

model UrlEntry {
  id String @id @default(uuid())

  // Shop context
  shop String
  productId BigInt

  // URL identity
  originalUrl String @db.Text

  // Optional short link support
  slug String? @unique

  // Indexing control
  indexAction   IndexAction @default(INDEX)
  status        UrlStatus   @default(PENDING)
  attempts      Int         @default(0)

  // Timing
  submittedAt   DateTime  @default(now())
  lastEventAt   DateTime  @updatedAt // webhook activity
  lastTriedAt   DateTime?
  lastIndexedAt DateTime?
  processedAt   DateTime?

  // Optional optimization
  // contentHash    String?  // detect meaningful changes

  // Flexible metadata
  metadata Json?

  // Constraints & indexes
  @@unique([shop, originalUrl])
  @@unique([shop, productId])
  @@index([shop])
  @@index([status])
  @@index([indexAction])
}

enum UrlStatus {
  PENDING
  PROCESSING
  COMPLETED
  FAILED
}

enum IndexAction {
  INDEX // submit/update
  DELETE // remove from index
  IGNORE // do nothing
}

model Session {
  id                  String    @id
  shop                String
  state               String
  isOnline            Boolean   @default(false)
  scope               String?
  expires             DateTime?
  accessToken         String
  userId              BigInt?
  firstName           String?
  lastName            String?
  email               String?
  accountOwner        Boolean   @default(false)
  locale              String?
  collaborator        Boolean?  @default(false)
  emailVerified       Boolean?  @default(false)
  refreshToken        String?
  refreshTokenExpires DateTime?
}
