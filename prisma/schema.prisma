// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

// Note that some adapters may set a maximum length for the String type by default, please ensure your strings are long
// enough when changing adapters.
// See https://www.prisma.io/docs/orm/reference/prisma-schema-reference#string for more information
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  
}

model UrlEntry {
  id           String    @id @default(uuid())
  
  // Relation to the shop/session
  shop         String    // Maps to Session.shop
  
  // URL Data
  originalUrl  String    @db.Text
  slug         String?   @unique // If you are making a shortener
  
  // Status Tracking
  status       UrlStatus @default(PENDING)
  attempts     Int       @default(0)
  
  // Timing
  submittedAt  DateTime  @default(now())
  lastTriedAt  DateTime?
  processedAt  DateTime?
  
  // Metadata (JSON is great for "many more" flexible fields)
  metadata     Json?
  
  // Relations
  @@index([shop])
  @@index([status])
}

enum UrlStatus {
  PENDING
  PROCESSING
  COMPLETED
  FAILED
}

model Session {
  id            String    @id
  shop          String
  state         String
  isOnline      Boolean   @default(false)
  scope         String?
  expires       DateTime?
  accessToken   String
  userId        BigInt?
  firstName     String?
  lastName      String?
  email         String?
  accountOwner  Boolean   @default(false)
  locale        String?
  collaborator  Boolean?  @default(false)
  emailVerified Boolean?  @default(false)
  refreshToken        String?
  refreshTokenExpires DateTime?
}
